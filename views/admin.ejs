<!DOCTYPE html>
<html>

<head>
    <title>
        Admin Password
    </title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/comment.css">
</head>

<body>
    <nav class="navbar navbar-expand-xl navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">Only Memers</a>
            <div class="d-flex justify-content-end align-items-center" style="gap: .5rem;">
                <% if (user) { %>
                    <span class="align-middle">Logged in as: <%= user.username %></span>
                    <% if(!user.member && !user.admin){ %>
                        <a href="/membership" class="btn btn-dark" role="button">Member</a>
                        <%} %>
                            <% if(!user.admin){ %>
                                <a href="/admin" class="btn btn-dark" role="button">Admin</a>
                                <%}%>
                                    <a href="/logout" class="btn btn-dark" role="button">
                                        Logout</a>
                                    <% } else { %>
                                        <a href="/register" class="btn btn-dark" role="button">Register</a>
                                        <a class="btn btn-dark" role="button" href="/login">Login</a>
                                        <%}%>
            </div>
        </div>
    </nav>
    <section class="vh-100" style="background-color: hsl(0, 0%, 96%);">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center">
                <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                    <div class="card shadow-2-strong" style="border-radius: 1rem;">
                        <form method="POST" action="/admin">
                            <div class="card-body p-5 text-center">
                                <h3 class="mb-5">Admin</h3>
                                <small class="mb-2" style="display: block; text-align: left;">You'll be able to delete
                                    posts and view usernames once you enter the password.</small>
                                <div class="form-outline mb-4">
                                    <input type="password" id="admin" class="form-control form-control-lg"
                                        name="admin" />
                                    <label class="form-label" for="admin">Secret Password</label>
                                </div>

                                <button class="btn btn-primary btn-block mb-4" type="submit">Submit</button>
                            </div>
                            <% if (locals.errors) { %>
                                <ul class="list-group">
                                    <% locals.errors.forEach((error)=> { %>
                                        <li class="list-group-item" style="color: red;">
                                            <%= error.msg %>
                                        </li>
                                        <%})%>
                                </ul>
                                <%}%>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <div class="container d-flex align-items-center" style="gap: .25rem;">
        <h5>You must be logged in to view this page.</h5>
        <a href="/register" class="btn btn-dark" role="button">Register</a>
        <a href="/login" class="btn btn-dark" role="button">Login</a>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
</body>

</html>